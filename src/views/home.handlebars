<main>
    <h1>Home</h1>

    {{#if isAdmin}}

    <div class="home-container">
        {{#each products}}
        <ul>
            <li>
                <h4>{{this.title}}</h4>
            </li>
            <li><img src="{{this.file}}" alt="{{this.title}}"></li>
            <li>{{this.description}}</li>
            <li><strong>${{this.price}}</strong></li>
        </ul>
        {{/each}}
    </div>

    <div class="container-pages">
        {{#if hasPrevPage}}
        <a href="/?page={{prevPage}}">Anterior</a>
        {{/if}}

        {{#if hasNextPage}}
        <a href="/?page={{nextPage}}">Siguiente</a>
        {{/if}}

        <br>
        <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
        <br>
    </div>


    {{else}}
    <h2>No tienes acceso para ver los productos</h2>
    {{/if}}

</main>



<script src="/static/assets/js/index.js"></script>